@model IEnumerable<QuotesWebApp.Models.QuoteModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Quotes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuoteText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuoteAuthor)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteAuthor)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
